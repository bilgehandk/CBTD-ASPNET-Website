@page
@model CBTDWeb.Pages.Manifactors.ManifactorsUpsertModel
@{
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-info">@(Model.ObjManifactor?.Id != 0 ? "Update " : "Create ")Manifactors</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="ObjManifactor.Name" class="form-control border-0 shadow" />
                    <label asp-for="ObjManifactor.Name" class="ms-2"></label>
                    <span asp-validation-for="ObjManifactor.Name" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ObjManifactor.DisplayOrder" class="form-control border-0 shadow" />
                    <label asp-for="ObjManifactor.DisplayOrder" class="ms-2">Display Order</label>
                    <span asp-validation-for="ObjManifactor.DisplayOrder" class="text-danger"></span>

                </div>
                <!--You need to hide the Id (for edit mode, so the model knows which item you’re editing) -->
                @if (Model.ObjManifactor.Id != 0)
                {
                    <input type="hidden" asp-for="ObjManifactor.Id" />
                }
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-info form-control">@(Model.ObjManifactor?.Id != 0 ? "Update " : "Create ") Manifactors</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-page="ManifactorsIndex" class="btn btn-outline-info border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
