@page
@model CBTDWeb.Pages.Manifactors.ManifactorsIndexModel

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-info">
                Manifactors List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="ManifactorsUpsert" asp-route-id="0" class="btn btn-info">
                <i class="bi bi-plus-circle"></i>  Create New Manifactors
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Manifactors Name
                </th>
                <th>
                    Display Order
                </th>
                <th>
                    &nbsp;
                </th>
            </tr>
        </thead>
        <tbody>
            <!--create a loop here to loop through and display the actual database values -->
            @foreach (var obj in Model.objManifactorList)
            {
                <tr>
                    <td width="50%">@obj.Name</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="ManifactorsUpsert" asp-route-id="@obj.Id" class="btn btn-info mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-page="DeleteManifactors" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div> <!--close container-->